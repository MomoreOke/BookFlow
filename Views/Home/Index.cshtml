@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Welcome to BOOKFLOW</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-image: url('@Url.Content("~/Images/library Background.png")');
            background-size: cover;
        }

        .container {
            text-align: center;
            padding: 100px;
        }

        .logo img {
            max-width: 200px;
        }

        .content {
            background-color: rgba(255, 255, 255, 0.8);
            padding: 20px;
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="@Url.Content("~/Images/BOOKFLOW.png")" alt="Website Logo" />
        </div>

        <div class="content">
            <h1>@Model.WelcomeMessage</h1>

            <div class="d-grid gap-2 col-6 mx-auto">
                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Login">SIGN IN</a>
                <a class="btn btn-secondary btn-sm" asp-controller="Account" asp-action="Register">SIGN UP</a>
            </div>

        </div>
    </div>
</body>
</html>
