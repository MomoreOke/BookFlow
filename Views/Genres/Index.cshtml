@model IEnumerable<LibraryManagement.Data.LibraryDBContext.Genre>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add new Genre</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GenreName)
            </td>
            <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.GenreId">Edit</a>
                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.GenreId">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.GenreId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
