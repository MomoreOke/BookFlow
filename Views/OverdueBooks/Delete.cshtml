@model LibraryManagement.Data.LibraryDBContext.OverdueBook

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Over due Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Over due days
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NumberOfDaysOverdue)
        </dd>
        <dt class="col-sm-2">
            Fine Amount
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FineAmount)
        </dd>
        <dt class="col-sm-2">
            Borrower
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BorrowerName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.BookName)
        </dd>
        <dt class="col-sm-2">
            Borrower phone number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.UserPhoneNumber)
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="OverdueBookId" />
        <input type="submit" value="Yes,Delete" class="btn btn-danger" /> 
    </form>
</div>
