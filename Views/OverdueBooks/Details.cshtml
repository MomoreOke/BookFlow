@model LibraryManagement.Data.LibraryDBContext.OverdueBook

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Over dues book detail</h1>

<div>
   
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Over due days
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumberOfDaysOverdue)
        </dd>
        <dt class = "col-sm-2">
            Fine Amount
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FineAmount)
        </dd>
        <dt class = "col-sm-2">
           Borrower
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BorrowerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Book.BookName)
        </dd>
        <dt class = "col-sm-2">
          Borrower phone number
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Member.UserPhoneNumber)
        </dd>
    </dl>
</div>
<br />
<br />
<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>
